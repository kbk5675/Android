<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="14dp"
    android:paddingBottom="15dp"
    android:background="@drawable/white_border_box_selectable"
    style="@style/LayoutWidthMatch">
    <RelativeLayout
        android:id="@+id/linearLayout_saveListItem"
        style="@style/LayoutWidthMatch">
        <TextView
            android:id="@+id/textView_filename"
            android:paddingTop="15dp"
            android:paddingStart="10dp"
            android:paddingEnd="30dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_alignParentStart="true"
            style="@style/BlackText"/>
        <CheckBox
            android:id="@+id/checkBox_check"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:button="@android:color/transparent"
            android:background="@drawable/check_box"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/textView_count_date"
        android:layout_marginTop="6dp"
        android:paddingHorizontal="10dp"
        style="@style/FileText"/>
</LinearLayout>